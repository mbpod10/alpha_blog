<h1 class="text-center mt-4">Create New Category</h1>
<div class="container"> 
  <div class="row justify-content-center">
     <div class="col-7">
     <%= render 'shared/errors', obj: @category%>
      <%= form_with(model: @category, local: true)  do |f| %>
        <div class="form-group">
          <%= f.label :name %> 
          <%= f.text_field :name, class: "form-control", placeholder: "Name Of Category" %>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.submit 'Create', class: "btn btn-outline-success btn-lg article-submit" %>
        </div>
      <%end%>
    </div>
  </div